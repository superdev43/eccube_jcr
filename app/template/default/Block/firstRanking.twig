                {% for Image in FirstRankProductImages %}
                    <div><img src="{{ asset(Image.file_name, 'save_image') }}"></div>
                {% else %}
                    <div><img src="{{ asset(''|no_image_product, 'save_image') }}"></div>
                {% endfor %}
            </div>
            <div class="first-ranking-slider-nav ranking-nav">
                {% for Image in FirstRankProductImages %}
                    <div><img src="{{ asset(Image.file_name, 'save_image') }}"></div>
                {% else %}
