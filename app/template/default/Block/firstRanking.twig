                    <img src="./html/user_data/assets/img/common/icon_postfree.png"/>
                                        <p>{% if now_date | date('h') > 6  %}{{res2}}{% else %}{{res1}}{% endif %}<span>{% if now_date | date('h') > 6  %}（{{weekday[res22]}}){% else %}({{weekday[res11]}}){% endif %}</span></p>
